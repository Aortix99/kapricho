<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="7dp"
        app:contentPaddingBottom="10dp"
        app:contentPaddingLeft="6dp"
        app:contentPaddingRight="6dp"
        app:contentPaddingTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/user_profile"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_id_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="id"
                android:textColor="@color/purple_500"
                android:textSize="23dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_nombre_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nombre Apellido"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="23dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_rol_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text="Rol del usuario"
                android:textColor="#353F43"
                android:textSize="19dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button_delete_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:backgroundTint="@color/purple_500"
                android:textColor="#fff"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/button_edit_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"
                android:backgroundTint="@color/purple_500"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>