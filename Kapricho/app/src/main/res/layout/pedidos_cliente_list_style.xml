<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_item_cocina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="6dp"
            app:contentPaddingRight="6dp"
            app:contentPaddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView_orden_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Orden NÂº: 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"/>
                    <TextView
                        android:id="@+id/textView_mesa_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mesa: 0"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado: "
                            android:textSize="18sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/textView_estatus_orden_cliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recibido"
                            android:textSize="18sp"
                            android:textColor="#D6C41F"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_total_orden_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: $0 COP"
                        android:textSize="18sp" />
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButtonMenuOrderCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginRight="2dp"
                    android:elevation="0dp"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    app:rippleColor="@color/purple_700"
                    app:tint="@color/purple_700"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:contentDescription="Menu"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>