<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="5dp"
        app:contentPaddingBottom="10dp"
        app:contentPaddingLeft="6dp"
        app:contentPaddingRight="6dp"
        app:contentPaddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_list_product_admin"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/gallery_black"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textView_id_producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre producto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/textView_nombre_producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre producto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"/>

                <TextView
                    android:id="@+id/textView_disponibilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#008832"/>

                <TextView
                    android:id="@+id/textView_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0 COP"
                    android:textSize="18sp"
                    android:textColor="@color/purple_500"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_delete_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eliminar"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/button_update_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Editar"
                        android:layout_marginLeft="3dp"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>